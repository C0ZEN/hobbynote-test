.main-container

	//- The bomb image
	webicon.bomb(
	icon="bomb")

	//- The text over the bomb
	bomb-screen(
	bomb-screen-text="{{ vm.data.bombScreenText }}")

	//- The text over the computer screen
	computer-screen(
	computer-screen-text="{{ vm.data.computerScreenText }}"
	computer-screen-wait-input="{{ vm.data.computerScreenWaitInput }}")

	//- Video
	video.video-js.vjs-default-skin(
	ng-if="vm.data.showExplosion"
	preload="auto"
	width="100vw"
	height="100vh"
	vjs-video
	autoplay="true")

		//- Video source
		source(
		src="medias/videos/explosion.mp4"
		type="video/mp4")