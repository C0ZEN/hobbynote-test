html(
ng-app="hobbynoteTestApp"
ng-strict-di="true"
lang="fr")
	head
		base
		meta(
		charset="utf-8")
		meta(
		http-equiv="X-UA-Compatible"
		content="IE=9; IE=8; IE=7; IE=EDGE")
		meta(
		name="viewport"
		content="width=device-width, initial-scale=1")
		link(
		rel="manifest"
		href="manifest.json")
		meta(
		name="theme-color"
		content="#FFFFFF")
		link(
		rel="canonical"
		href="<!-- @echo configJson.app.canonicalUrl -->")
		meta(
		property="og:url"
		content="<!-- @echo configJson.app.canonicalUrl -->")
		meta(property="og:title"
		content="Hobbynote Test App")
		meta(
		name="author"
		content="Geoffrey TESTELIN")
		meta(
		property="og:locale"
		content="fr_FR")
		meta(
		name="description"
		content="Just a test for Hobbynote")
		meta(
		property="og:description"
		content="Just a test for Hobbynote")
		meta(
		property="og:site_name"
		content="Hobbynote Test App")

		meta(
		name="twitter:card"
		content="summary")
		meta(
		name="twitter:site"
		content="@C0ZEN")
		meta(
		name="twitter:creator"
		content="@C0ZEN")

		script(
		type="application/ld+json"
		src="structured-data.json")

		script(type="text/javascript").
			newDeferredStylesheet = function ($stylesheetUrl) {
				var stylesheet  = document.createElement('link');
				stylesheet.rel  = 'stylesheet';
				stylesheet.href = $stylesheetUrl;
				stylesheet.type = 'text/css';
				document.getElementsByTagName('head')[0].appendChild(stylesheet);
			}

		<!-- @if target="dev" -->
		script(type="text/javascript").
			newDeferredStylesheet('styles/css/vendors.min.css');
			newDeferredStylesheet('styles/css/hobbynote-test-app.min.css');
		<!-- @endif -->

		<!-- @if target="test" -->
		script(type="text/javascript").
			newDeferredStylesheet('styles/vendors.min.css');
			newDeferredStylesheet('styles/hobbynote-test-app.min.css');
		<!-- @endif -->

		<!-- @if target="preprod" -->
		script(type="text/javascript").
			newDeferredStylesheet('styles/vendors.min.css');
			newDeferredStylesheet('styles/hobbynote-test-app.min.css');
		<!-- @endif -->

		<!-- @if target="prod" -->
		script(type="text/javascript").
			newDeferredStylesheet('styles/vendors.min.css');
			newDeferredStylesheet('styles/hobbynote-test-app.min.css');
		<!-- @endif -->

	body

	<!-- Main view -->
	ui-view

	<!-- Vendors JS -->
	script(
	type="text/javascript"
	defer
	src="scripts/vendors.min.js")

	<!-- @if target="dev" -->
	script(
	type="text/javascript"
	defer
	src="scripts/hobbynote-test-app.min.js")
	<!-- @endif -->

	<!-- @if target="test" -->
	script(
	type="text/javascript"
	defer
	src="scripts/hobbynote-test-app.min.js")
	<!-- @endif -->

	<!-- @if target="preprod" -->
	script(
	type="text/javascript"
	defer
	src="scripts/hobbynote-test-app.min.js")
	<!-- @endif -->

	<!-- @if target="prod" -->
	script(
	type="text/javascript"
	defer
	src="scripts/hobbynote-test-app.min.js")
	<!-- @endif -->

	<!-- No script message -->
	noscript
		span This app require Javascript to be enabled.
		span Make sure to turn it on.